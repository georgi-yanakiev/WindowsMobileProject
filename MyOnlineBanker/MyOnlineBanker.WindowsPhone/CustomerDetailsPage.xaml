                        <TextBlock Text="{Binding Balance}" Margin="0 20 20 20" FontSize="25"/>
                        <TextBlock Text="{Binding Currency}" Margin="0 20 20 20" FontSize="25"/>
<!--                        <TextBlock Text="{Binding LastName}" />-->
                    </StackPanel>
